{{#if addNewNewsItem}}
<h1>Add a News Story</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline"}}
      </div>
      <div class="form-group">
        <label for="shortheadline">Short Headline</label>
        {{input value=shortheadline id="shortheadline"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category"}}
      </div>

      <div class="form-group">
        <label for="timestamp">Time Stamp</label>
        {{input value=timestamp id="timestamp"}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="story">Story</label>
        {{input value=story id="story"}}
      </div>

      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'newsItemForm'}}>Add News Story Form</button>
{{/if}}
